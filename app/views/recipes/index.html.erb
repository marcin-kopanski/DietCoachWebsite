<%= render "shared/recipes_header" %>

<div class="bg-light py-3">
  <div class="container">
    <% if logged_in?(:site_admin) %>
      <div class="row">
        <div class="col-md-12">
          <%= link_to 'Nowy Przepis', new_recipe_path, class: "pull-right" if logged_in?(:site_admin) %>
        </div>
      </div>
    <% end %>

    <%= paginate @recipes %>

    <% @recipes.each.with_index(1) do |recipe, index| %>
      <div class="row recipe mb-5">
        <div class="col-md-4 <%= 'order-12' if index.even? %>">
          <%= image_tag recipe_img(recipe.thumb_image, 'thumb'), width: '100%' %>
        </div>
        <div class="col-md-8">
          <div class="row">
            <div class="col text-center">
              <h2 class="blog-post-title"><%= link_to recipe.title, recipe %></h2>
            </div>

            <% if logged_in?(:site_admin) %>
              <div class="col-2 text-center"><%= render partial: 'recipes/admin_actions', locals: { recipe: recipe } %></div>
            <% end %>
          </div>

          <p><%= markdown recipe.subtitle %></p>
        </div>
      </div>
    <% end %>

    <%= paginate @recipes %>
  </div>
</div>
