    <%= form.text_area :body, id: :recipe_body %>
  </div>

  <div class="field">
    <%= form.label :thumb_image %>
    <%= form.text_area :thumb_image, id: :recipe_thumb_image %>
  </div>

  <div class="field">
    <%= form.label :main_image %>
    <%= form.text_area :main_image, id: :recipe_main_image %>
  </div>

  <div class="field">
    <%= form.label :position %>
    <%= form.number_field :position, id: :recipe_position %>
