<%= form_for(recipe) do |form| %>
  <% if recipe.errors.any? %>
    <% recipe.errors.full_messages.each do |error| %>
       <%= alert_generator error %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="form-group">
     <label class="btn btn-primary btn-block">
        Wybierz miniaturkę <%= form.file_field :thumb_image, style: 'display: none;' %>
     </label>
  </div>

  <div class="form-group">
     <label class="btn btn-primary btn-block">
        Wybierz główny obraz <%= form.file_field :main_image, style: 'display: none;' %>
     </label>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
