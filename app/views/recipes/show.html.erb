<% content_for :title, @recipe.title + " | Gabinet Równowaga" %>
<% content_for :description, @recipe.subtitle %>
<div class="bg-light py-3">
  <div class="container">
    <% if logged_in?(:site_admin) %>
      <div class="row">
        <nav class="col-12 breadcrumb">
          <span class="pull-right">
            <%= link_to edit_recipe_path(@recipe) if logged_in?(:site_admin) do %>
              <i class="fa icon-pencil"></i>
            <% end %>
            <%= link_to @recipe, method: :delete,
              data: { confirm: "Czy chcesz usunąć ten przepis?" } if logged_in?(:site_admin) do %>
              <i class="fa icon-trash"></i>
            <% end %>
          </span>
        </nav>
      </div>
    <% end %>

    <div class="row my-3 mx-0">
      <h1 class="mx-auto text-primary"><strong><%= markdown @recipe.title %></strong></h1>
    </div>
    
    <div class="row my-3 mx-0">
      <%= markdown @recipe.subtitle %>
    </div>
    
    <div class="row">
      <div class="col-12 col-md-8 text-center mb-4">
        <%= image_tag recipe_img(@recipe.main_image, 'main'), width: '100%' %>
      </div>

      <div class="col-12 col-md-4">
        <h4 class="text-primary pl-3"><strong>Składniki:</strong></h4>
        <%= markdown @recipe.ingredients %>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <h4 class="text-primary"><strong>Opis przygotowania:</strong></h4>
        <%= markdown @recipe.body %>
      </div>
    </div>
  </div>
</div>
